{
  "name": "amanoba",
  "version": "2.1.6",
  "private": true,
  "description": "Unified game platform combining PlayMass infrastructure with Madoku gamification — built for engagement, retention, and viral growth",
  "author": "Narimato",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "release:patch": "node scripts/versioning/bump-version.mjs --type patch --reason \"Patch release\" && git add -A && git commit -m \"release: v$(node scripts/versioning/get-version.mjs) — Patch release\"",
    "release:minor": "node scripts/versioning/bump-version.mjs --type minor --reason \"Minor release\" && git add -A && git commit -m \"release: v$(node scripts/versioning/get-version.mjs) — Minor release\"",
    "release:major": "node scripts/versioning/bump-version.mjs --type major --reason \"Major release\" && git add -A && git commit -m \"release: v$(node scripts/versioning/get-version.mjs) — Major release\"",
    "seed": "tsx scripts/seed-all.ts",
    "seed:core": "tsx scripts/seed-core-data.ts",
    "seed:achievements": "tsx scripts/seed-achievements.ts",
    "seed:rewards": "tsx scripts/seed-rewards.ts",
    "seed:guest-usernames": "tsx --env-file=.env.local scripts/seed-guest-usernames.ts",
    "seed:quiz-questions": "tsx scripts/seed-quiz-questions.ts",
    "seed:whackpop-emojis": "tsx scripts/seed-whackpop-emojis.ts"
  },
  "dependencies": {
    "@auth/mongodb-adapter": "^3.11.0",
    "@hookform/resolvers": "^3.9.0",
    "@next/env": "^15.5.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.56.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.462.0",
    "mongodb": "^6.18.0",
    "mongoose": "^8.18.0",
    "next": "15.5.2",
    "next-auth": "^5.0.0-beta.29",
    "next-themes": "^0.4.6",
    "pino": "^9.13.0",
    "qrcode": "^1.5.4",
    "rate-limiter-flexible": "^8.0.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "recharts": "^3.2.1",
    "sonner": "^1.5.0",
    "source-map-js": "1.2.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "to-regex-range": "5.0.1",
    "uuid": "^9.0.1",
    "vaul": "^0.9.3",
    "web-push": "^3.6.7",
    "xss": "^1.0.15",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "@types/uuid": "^9.0.8",
    "@types/web-push": "^3.6.3",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "pino-pretty": "^13.1.2",
    "postcss": "^8.4.47",
